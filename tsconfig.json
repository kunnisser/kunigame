{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "module": "esnext",
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "output",
    "baseUrl": ".",
    "paths": {
      "ts@/*": [
        "projects/*"
      ],
      "editor@/*": [
        "editor/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
}