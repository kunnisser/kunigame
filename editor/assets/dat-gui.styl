.react-dat-gui
  font-size 12px
  font-family Lucida Grande, sans-serif
  box-sizing border-box
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-tap-highlight-color transparent
  padding-bottom 30px
  .dg-radio-group
    background #1a1a1a
    padding 10px 10px 10px 20px
    & span
      margin-right 20px
  .radio
    .ant-radio-group
      padding 10px 0
      width 100%
      & label
        width auto
        display inline-block
    .ant-radio-wrapper
      color #66e527
  .cr.color
    position relative
    .popover
      top 28px
      right 9px !important
  .cr-item
    padding 10px
  .dg
    margin 0
    padding 0
    color #eee
    ul
      list-style none
      margin 0
      padding 0
      width 100%
      clear both
    li
      height auto
      line-height 1.5
    & .slider
      margin-top 0
    &.main
      &::-webkit-scrollbar
        width 5px
        background #1a1a1a
      &::-webkit-scrollbar-corner
        height 0
        display none
      &::-webkit-scrollbar-thumb
        border-radius 5px
        background #676767
  .cr
    display block
    background-color #1a1a1a
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none
    &:not(:last-child)
      border-bottom 1px solid #272727
    label
      display flex
      align-items center
      justify-content flex-start
      width 100%
      padding 1px 2px 1px 8px
    .label-text
      width 40%
      min-width 0
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      -webkit-user-select none
      -moz-user-select none
      -ms-user-select none
      user-select none
    &.boolean
      position relative
      border-left 5px solid #806787
      label
        cursor pointer
      .label-text
        display block
        padding 5px 0
      .checkbox-container
        width 100%
      input[type=checkbox]
        margin 0
        vertical-align middle
    &.button
      border-left 5px solid #e61d5f
      &:hover
        background #111
      .label-text
        display block
        width 100%
        padding 6px 2px 6px 8px
        cursor pointer
    &.number
      border-left 5px solid #2fa1d6
      .slider
        display block
        position relative
        border 3px solid #1a1a1a
        border-right-width 1px
        background-color #303030
        background-image linear-gradient(90deg, #66e527, #66e527)
        background-size 0 100%
        background-repeat no-repeat
        cursor ew-resize
        height 25px
    &.string
      border-left 5px solid #1ed36f
      input[type=text], textarea
        color #66e527
        padding 2px 5px
        width 100%
    &.select
      border-left 5px solid #f4d450
      label
        padding 6px 2px 6px 8px
      & select
        color #000
    &.color
      border-left 5px solid #1a1a1a
      .swatch
        text-align center
        font-weight 700
        color #fff
        text-shadow rgba(0, 0, 0, 0.7) 0 1px 1px
        padding 2px 5px
        border 3px solid #1a1a1a
        cursor pointer
      .popover
        position absolute
        z-index 2
        right 5px
      .cover
        position fixed
        top 0
        right 0
        bottom 0
        left 0
      .picker
        background #fff
        box-shadow 0 0 2px rgba(0, 0, 0, 0.3), 0 4px 8px rgba(0, 0, 0, 0.3)
        box-sizing initial
        width auto
        font-family Menlo, sans-serif
        margin-top -3px
        .body
          padding 0
          .controls
            display flex
            .toggles
              flex 1
              .hue-wrap
                height 10px
                position relative
        .saturation-wrap
          width 100%
          padding-bottom 55%
          position relative
          overflow hidden
      .fields-wrap
        display flex
        .fields
          flex 1
          display flex
          margin-left -6px
          .field
            padding-left 6px
            width 100%
            textarea
              font-size 11px
              color #333
            input
              font-size 11px
              color #333
              border-radius 2px
              border none
              box-shadow inset 0 0 0 1px #dadada
              height 21px
              text-align center
              &:focus
                outline none
            label
              text-transform uppercase
              font-size 11px
              line-height 11px
              color #969696
              text-align center
              display block
              margin-top 12px
      .pointer
        width 12px
        height 12px
        border-radius 6px
        transform translate(-6px, -1px)
        background-color #f8f8f8
        box-shadow 0 1px 4px 0 rgba(0, 0, 0, 0.37)
        position absolute
        z-index 3
      .pointer-circle
        width 12px
        height 12px
        border-radius 6px
        box-shadow inset 0 0 0 1px #fff
        transform translate(-6px, -6px)
    &.presets
      border-left 5px solid #dad5cb
      label
        padding 6px 2px 6px 8px
        select
          width 100%
  li
    &.folder
      display block
      padding 0
      .title
        font-weight 700
        -webkit-user-select none
        -moz-user-select none
        -ms-user-select none
        user-select none
        display block
        cursor pointer
        padding 5px 5px 5px 16px
        background #000 url('data:image/gif;base64,R0lGODlhBQAFAJEAAP////Pz8////////yH5BAEAAAIALAAAAAAFAAUAAAIIlI+hKgFxoCgAOw==') 6px 48% no-repeat // //Pz8////////yH5BAEAAAIALAAAAAAFAAUAAAIIlI+hKgFxoCgAOw==') 6px 48% no-repeat // //Pz8////////yH5BAEAAAIALAAAAAAFAAUAAAIIlI+hKgFxoCgAOw==') 6px 48% no-repeat // //Pz8////////yH5BAEAAAIALAAAAAAFAAUAAAIIlI+hKgFxoCgAOw==') 6px 48% no-repeat // //Pz8////////yH5BAEAAAIALAAAAAAFAAUAAAIIlI+hKgFxoCgAOw==') 6px 48% no-repeat // //Pz8////////yH5BAEAAAIALAAAAAAFAAUAAAIIlI+hKgFxoCgAOw==') 6px 48% no-repeat // //Pz8////////yH5BAEAAAIALAAAAAAFAAUAAAIIlI+hKgFxoCgAOw==') 6px 48% no-repeat // //Pz8////////yH5BAEAAAIALAAAAAAFAAUAAAIIlI+hKgFxoCgAOw==') 6px 48% no-repeat
      ul
        margin-left 4px
        width calc(100% - 4px)
.react-dat-gui *, .react-dat-gui :after, .react-dat-gui :before
  box-sizing inherit
.react-dat-gui .cr input[type=number], .react-dat-gui .cr input[type=text], .react-dat-gui .cr textarea
  background #303030
  border 3px solid #1a1a1a
  border-radius 0
  margin 0
  outline none
  font-size inherit
.react-dat-gui .cr input[type=number]:hover, .react-dat-gui .cr input[type=text]:hover
  background #3c3c3c
.react-dat-gui .cr input[type=number]:focus, .react-dat-gui .cr input[type=text]:focus
  background #494949
  color #fff
.react-dat-gui .cr input[type=number]::-ms-clear, .react-dat-gui .cr input[type=text]::-ms-clear
  display none
.react-dat-gui .cr.number input[type=number], .react-dat-gui .cr.number input[type=text]
  color #66e527
  height 25px
