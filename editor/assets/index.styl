.vh-scroll
  height calc(100vh - 36px)
  .ant-layout-sider-children
    height 100%
    .ant-tabs-card, .overflow-scroller, .ant-tabs-content
      height 100%
      overflow-y auto
 ::-webkit-scrollbar
  width 4px
  height 4px
::-webkit-scrollbar-track
  background rgb(255,255,255)
  border-radius 2px
::-webkit-scrollbar-thumb
  background #11b234
  border-radius 2px
::-webkit-scrollbar-thumb:hover
  background #55fd7a
.kn-image-thumb
  display flex
  align-items center
  justify-content center
  width 100px
  height 100px
  background #f2f2f2
  margin 0 auto
  & img
    max-width 100%
    max-height 100%
.kn-footer
  .overflow-scroller, .ant-tabs-content
    height 270px
    overflow-y auto
.kn-texture
  padding 10px
  text-align: center
  & img
    max-width 100%
    max-height: 100px
.kn-texture-bar
  padding 10px
